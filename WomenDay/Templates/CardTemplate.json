{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "__TitleText__"
    },
    {
      "type": "TextBlock",
      "text": "__Description__",
      "wrap": true
    },
    {
      "type": "Image",
      "horizontalAlignment": "Center",
      "separator": true,
      "url": "__ImageUrl__"
    },
    {
      "type": "Input.Text",
      "placeholder": "Что-то изменить/добавить?",
      "style": "text",
      "isMultiline": true,
      "maxLength": 0,
      "id": "Comment"
    }
  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Заказать",
      "data": {
        "orderType": "__OrderType__",
        "orderCategory": "__OrderCategory__"
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.0"
}